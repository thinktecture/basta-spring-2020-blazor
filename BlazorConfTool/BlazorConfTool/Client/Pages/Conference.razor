@page "/conferences/{mode}/{id:guid}"

<h3>Conference Details</h3>

<EditForm Model="_conferenceDetails">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="form-group">
        <label for="title">Title</label>
        <input disabled="@_isShow" type="text" value="@_conferenceDetails.Title" class="form-control" id="title" placeholder="Title of the conference">
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input disabled="@_isShow" type="text" value="@_conferenceDetails.City" class="form-control" id="city" placeholder="Location">
    </div>
    <div class="form-group">
        <label for="country">Country</label>
        <input disabled="@_isShow" type="text" value="@_conferenceDetails.Country" class="form-control" id="country" placeholder="Location">
    </div>
    <div class="form-group">
        <label for="datefrom">From</label>
        <InputDate @bind-Value="@_conferenceDetails.DateFrom" disabled="@_isShow" class="form-control" id="datefrom" placeholder="Location"></InputDate>
    </div>
    <div class="form-group">
        <label for="dateto">To</label>
        <input disabled="@_isShow" type="date" value="@_conferenceDetails.DateTo" class="form-control" id="dateto" placeholder="Location">
    </div>

    @if (Mode != Modes.Show)
    {
        <button type="submit" class="btn btn-primary">Save</button>
    }
</EditForm>
